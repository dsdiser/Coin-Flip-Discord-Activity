{
  "name": "coin-flip-discord-activity",
  "private": true,
  "version": "0.6.0",
  "type": "module",
  "description": "A Discord Activity for coin flipping with interactive UI and WebSocket multiplayer support",
  "keywords": [
    "discord",
    "activity",
    "coin-flip",
    "websocket",
    "multiplayer"
  ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "dev:cloudflare": "set VITE_DEV_CLOUDFLARE=1 && vite",
    "build": "npm run build:client && npm run build:worker",
    "build:client": "vite build",
    "build:worker": "esbuild worker/main.ts --bundle --format=esm --platform=neutral --outfile=worker/dist/main.js --target=es2022",
    "preview": "vite preview",
    "test": "vitest",
    "pretest": "npm run build:worker"
  },
  "dependencies": {
    "@discord/embedded-app-sdk": "^2.4.0",
    "@vitejs/plugin-react": "^5.0.3",
    "hono": "^4.9.10",
    "jotai": "^2.15.0",
    "motion": "^12.23.22",
    "ogl": "^1.0.11",
    "random-js": "^2.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.9",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.6.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.25.11",
    "miniflare": "^4.20251011.0",
    "vite": "^7.1.8",
    "vitest": "^1.3.0",
    "wrangler": "^4.41.0",
    "ws": "^8.18.3"
  }
}
